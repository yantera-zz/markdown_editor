{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "importHelpers": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": ["reflect-metadata"],
    "lib": [
      "dom",
      "es6",
      "es2015.promise"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
